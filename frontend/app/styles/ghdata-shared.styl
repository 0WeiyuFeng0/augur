background = #eaeaea
foreground = #fafafa
full-shadow = 5px 5px 20px 2px rgba(0, 0, 0, 0.03)

body
  background: background
  padding-bottom: 216px

header
  min-height: 216px
  padding: 48px
  margin-bottom: 24px
  background: foreground

header .search
  margin-top: 48px

.content
  margin: auto
  width: 95%
  max-width: 960px

section#landing h1
  font-size: 25px

section
  padding: 36px
  margin: 0 auto 24px auto
  background: foreground
  box-shadow: full-shadow

section h2
  font-size: 21px
  line-height: 32px
  color: foreground - 50%
  margin-bottom: 50px

section.unmaterialized
  box-shadow: 0 0 0 0
  background: (foreground - 4%)
  padding: 24px 24px 48px 24px
  border-right: 1px solid (background - 5%)
  border-bottom: 1px solid (background - 5%)

@media print
  body
    zoom: 75%
  section
    min-width: 800px
    min-height: 10.5in
    page-break-after: always;

  section.unmaterialized
    display: none

#comparison-form-template
  display: none