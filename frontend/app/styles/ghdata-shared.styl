background = #eaeaea
foreground = #fafafa
full-shadow = 5px 5px 20px 2px rgba(0, 0, 0, 0.03)

body
  background: background
  padding-bottom: 216px

header
  min-height: 216px
  padding: 48px
  margin-bottom: 24px
  background: foreground

header .search
  margin-top: 48px
  
#logo
  display:block
  margin: 0 auto
  max-width: 400px
  
.content
  margin: auto
  width: 95%
  max-width: 1080px

section#landing h1
  font-size: 25px

section
  padding: 36px
  margin: 0 auto 24px auto
  background: foreground
  box-shadow: full-shadow

section h2
  font-size: 21px
  line-height: 32px
  color: foreground - 50%
  margin-bottom: 50px

section small
  display: block
  width: 100%
  margin-top: 30px
  padding-right: 20px
  text-align: right
  color: #aaa

section small a
  color: #aaf
  text-decoration: none

section.unmaterialized
  box-shadow: 0 0 0 0
  background: (foreground - 4%)
  padding: 24px 24px 48px 24px
  border-right: 1px solid (background - 5%)
  border-bottom: 1px solid (background - 5%)

#controls
  padding: 36px
  background: (foreground - 4%)
  border-right: 1px solid (background - 5%)
  border-bottom: 1px solid (background - 5%)
  margin-bottom: 20px

.fixed
  position: relative

@media (min-width: 1230px)
  #cards
    padding-bottom: 100px
    position: relative
    z-index: 9
  
  section
    z-index: 10
    width: calc(100% - 345px);
    float: right;
  
  #landing
    width:100%
    
  .fixed-container
    z-index: 0
    position: absolute
    top: 245px
    left: calc(50% - (540px))
  
  .fixed
    position: fixed !important
    top: 25px
    
  #controls
    width: 325px
    float: left

cite.metric
  display:none;
  width:100%
  height: 0
  float:right
  text-align: center;
  font-size: 12px
  color: #ccc
  font-style: normal
  padding-left: 50px
  margin: 200px 0px -185px 0

cite.metric a
  color: #aaa

.linechart
  margin-bottom: 30px

.mg-line-legend
  display: none

@media print
  body
    zoom: 75%
  section
    min-width: 800px
    min-height: 10.5in
    page-break-after: always;

  section.unmaterialized
    display: none

#comparison-form-template
  display: none

.hidden, .hidden > *, .hidden > small
  display: none !important 